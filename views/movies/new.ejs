<%- include('../partials/header') %>

<h1>Add New Movie</h1>

<form action="/movies" method="POST">

    <% if (typeof errors !== 'undefined') { %>
        <% errors.forEach(error => { %>
            <p class="error"><%= error.msg %></p>
        <% }) %>
    <% } %>

    <label>Title</label>
    <input type="text" name="title" value="<%= title %>" required>

    <label>Description</label>
    <textarea name="description" required><%= description %></textarea>

    <label>Year</label>
    <input type="number" name="year" value="<%= year %>" required>

    <label>Genres (comma separated)</label>
    <input type="text" name="genres" value="<%= genres %>" required>

    <label>Rating (0â€“10)</label>
    <input type="number" name="rating" min="0" max="10" value="<%= rating %>" required>

    <label>Poster URL (optional)</label>
    <input type="text" name="poster" value="<%= poster %>">

    <button type="submit">Add Movie</button>
</form>

<%- include('../partials/footer') %>
